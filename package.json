{
  "name": "graphql-nextjs-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prepare": "husky",
    "prettier": "prettier --check './**/*.{js,ts,jsx,tsx,graphql}'",
    "prettier:fix": "prettier --write './**/*.{js,ts,jsx,tsx,graphql}'",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@apollo/client": "^3.10.4",
    "@apollo/experimental-nextjs-app-support": "^0.11.0",
    "axios": "^1.7.2",
    "graphql": "^16.8.1",
    "next": "14.2.3",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/client-preset": "4.2.6",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/typescript": "^4.0.7",
    "@graphql-codegen/typescript-react-apollo": "^4.3.0",
    "@types/node": "20.14.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "add": "^2.0.6",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "postcss": "^8",
    "prettier": "^3.3.0",
    "tailwindcss": "^3.4.1",
    "typescript": "5.4.5"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": [
      "yarn run prettier:fix"
    ]
  },
  "volta": {
    "node": "20.14.0",
    "yarn": "3.6.4"
  }
}
